<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StudentActivity">

    <TextView
        android:id="@+id/TV_CurrentUserStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Student"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ET_SearchProfessor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search Professor Name..."
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/TV_CurrentUserStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/BTN_SearchProfessor" />

    <Button
        android:id="@+id/BTN_SearchProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toTopOf="@id/ET_SearchProfessor"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_ProfessorList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ET_SearchProfessor"
        app:layout_constraintBottom_toTopOf="@id/BTN_SignoutStudentActivity" />

    <Button
        android:id="@+id/BTN_SignoutStudentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>